call plug#begin(expand($PACKAGEDIR))
    Plug 'tidalcycles/vim-tidal'
    Plug 'jiangmiao/auto-pairs'
    Plug 'supercollider/scvim'
call plug#end()

augroup FastEscape
    autocmd!
    au InsertEnter * set timeoutlen=0
    au InsertLeave * set timeoutlen=1000
augroup END


filetype plugin on
syntax on
